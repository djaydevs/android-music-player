<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="25dp"
    android:orientation="vertical"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_cancel"
        android:clickable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:fontFamily="@font/poppins"
            android:text="From: "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvEmailFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:text="name@example.com"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:fontFamily="@font/poppins"
            android:text="To: "
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/etEmailTo"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/et_selector"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:textColorHighlight="@color/green_500"
            android:textColorHint="@color/black_200"
            android:textColorLink="@color/green_500"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:fontFamily="@font/poppins"
            android:text="Subject: "
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/etSubject"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/et_selector"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:textColorHighlight="@color/green_500"
            android:textColorHint="@color/black_200"
            android:textColorLink="@color/green_500"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins"
        android:text="Message "
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/etEmailMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/et_selector2"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:gravity="start|top"
        android:hint="Compose"
        android:inputType="textMultiLine"
        android:maxLines="10"
        android:minLines="7"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textColorHighlight="@color/green_500"
        android:textColorHint="@color/black_100"
        android:textColorLink="@color/green_500"
        android:textCursorDrawable="@drawable/cursor"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnSendEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:fontFamily="@font/poppins"
        android:text="Send"
        android:textAllCaps="false"
        android:textColor="@color/black_500" />

</LinearLayout>