<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_500"
    android:padding="30dp"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppins"
        android:text="Sign Up"
        android:textColor="@color/green_500"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_account"/>

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <ImageButton
            android:id="@+id/btnCamera"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/black_100"
            android:src="@drawable/ic_camera" />

        <ImageButton
            android:id="@+id/btnGallery"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="2dp"
            android:backgroundTint="@color/black_100"
            android:src="@drawable/ic_image" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/et_selector"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:textColorHighlight="@color/green_500"
            android:textColorHint="@color/black_200"
            android:textColorLink="@color/green_500"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Email"
            android:textColor="@color/white"
            android:textSize="13sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/etEmailSignUp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/et_selector"
                android:fontFamily="@font/poppins"
                android:hint="test@example.com"
                android:textColor="@color/white"
                android:textColorHighlight="@color/green_500"
                android:textColorHint="@color/black_200"
                android:textColorLink="@color/green_500"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="15sp" />
            <ImageView
                android:id="@+id/btnMail"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="3dp"
                android:src="@drawable/ic_mail"
                android:layout_weight="0.5"
                android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Password"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/etPasswordSignUp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/et_selector"
            android:fontFamily="@font/poppins"
            android:hint="7 characters atleast"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHighlight="@color/green_500"
            android:textColorHint="@color/black_200"
            android:textColorLink="@color/green_500"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Contact Number"
            android:textColor="@color/white"
            android:textSize="13sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/etContact"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/et_selector"
                android:fontFamily="@font/poppins"
                android:hint="09XXXXXXXXX"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/white"
                android:textColorHighlight="@color/green_500"
                android:textColorHint="@color/black_200"
                android:textColorLink="@color/green_500"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="15sp" />
            <ImageView
                android:id="@+id/btnContact"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="3dp"
                android:src="@drawable/ic_message"
                android:layout_weight="0.5"
                android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:fontFamily="@font/poppins"
            android:text="Save"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:textColor="@color/black_500" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button3"
            android:fontFamily="@font/poppins"
            android:text="Cancel"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:textColor="@color/green_500" />
    </LinearLayout>
</LinearLayout>